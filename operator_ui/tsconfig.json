{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["*", "src/*", "support/*", "@types/*"]
    },
    "declaration": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "outDir": "./dist",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "removeComments": false,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src", "./@types"],

  "references": [
    { "path": "../styleguide" },
    { "path": "../tools/json-api-client" },
    { "path": "../tools/local-storage" }
  ]
}
